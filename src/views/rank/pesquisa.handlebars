      <div class="table-responsive-sm text-center">
        <table class="table table-dark table-hover text-light">
          <thead>
            <tr>
              <th>
                <ul class="nav nav-tabs border-0">
                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-secondary text-light" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><b>Filtrar</b></a>
                    <div class="dropdown-menu">
                      <a class="dropdown-item" href="/rank/geral">Geral</a>
                      <a class="dropdown-item" href="/rank/diario">Diario</a>
                      <a class="dropdown-item" href="/rank/semanal">Semanal</a>
                      <a class="dropdown-item" href="/rank/mensal">Mensal</a>
                      <a class="dropdown-item" href="/rank/estudo">Tempo de Estudo</a>
                      <a class="dropdown-item" href="/rank/aula">Tempo de Aula</a>
                      <a class="dropdown-item" href="/rank/leitura">Tempo de Leitura</a>
                      <a class="dropdown-item" href="/rank/pesquisa">Tempo de Pesquisa</a>
                      <a class="dropdown-item" href="/rank/exercicio">Tempo de Exercicio</a>
