<div class="container">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb bg-dark">
      <li class="breadcrumb-item"><a class="text-light" href="/user/home">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page">Minha turma</li>
    </ol>
  </nav>
  <h3 for="email" class="text-dark">Procurar novo amigo: </h3>
  <form class="form-inline mb-2" name="email" action="/turma/adicionar-amigo" method="GET">
    <input class="form-control col-sm-6" id="email" name="email" type="search" placeholder="Informe o e-mail" aria-label="Search" required>
    <button class="btn btn-dark mx-2 my-sm-0" type="submit">Procurar</button>
  </form>
  <div class="table-responsive-sm text-center">
    <table class="table table-dark table-hover">
    <thead class="mb-2">
      <tr class="text-center">
        <th scope="col-1"></th>
        <th scope="col">Nome</th>
        <th scope="col">Curso</th>
        <th scope="col">Total estudado</th>
      </tr>
    </thead>
    <tbody>
    {{#each amigos}}
    {{#each turma}}
        <tr class="text-center my-4">
          <th scope="row"><img class="rounded-circle border border-secondary" style="width: 40px; height: 40px;" src="{{foto}}" alt=""></th>
          <td>{{name}}</td>
          <td>{{curso}}</td>
          <td>{{historico.total}} min</td>
          <td>
            <form class="" action="/turmaP/excluirAmigo" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn text-light" style="background-color: #FA8072;">Tirar da turma
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-exclamation-diamond-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M9.05.435c-.58-.58-1.52-.58-2.1 0L.436 6.95c-.58.58-.58 1.519 0 2.098l6.516 6.516c.58.58 1.519.58 2.098 0l6.516-6.516c.58-.58.58-1.519 0-2.098L9.05.435zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                    </svg>
                </button>
            </form>
          </td>
        </tr>
    {{/each}}
    {{/each}}
    </tbody>
  </table>
  </div>

</div>