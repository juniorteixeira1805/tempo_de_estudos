<div class="row">
    <div class="card bg-dark" style="box-shadow: 11px 9px 7px rgba(50, 50, 50, 0.77); margin: 0 auto;">
        <div class="card-body">
            <form action="/auth/registerUser" method="POST">
            <div class="alert alert-warning" role="alert" style="text-align: center;">
            Todos os campos com "*" são obrigatorios!
            </div>
                <div class="row my-4">
                    <div class="col-sm">
                        <label for="name" class="text-light">Nome e Sobrenome*</label>
                        <input type="name" name="name" id="name" class="form-control" placeholder="Informe o nome e sobrenome" required>
                    </div>
                </div>

                <div class="row my-4">
                    <div class="col-sm">
                        <label for="email" class="text-light">Curso*</label>
                        <input type="text" name="curso" id="curso" class="form-control" placeholder="Informe o curso ou se concurseira(o)" required>
                    </div>
                </div>

                <div class="row my-4">
                    <div class="col-sm">
                        <label class="text-light">Insira um endereço de uma foto</label>
                        <input type="text" name="foto" id="foto" class="form-control" placeholder="Insira um url de uma foto de uma rede social">
                    </div>
                </div>

                <div class="row my-4">
                    <div class="col-sm">
                        <label for="email" class="text-light">E-mail*</label>
                        <input type="email" name="email" id="email" class="form-control" placeholder="Informe o email" required>
                    </div>
                </div>

                <div class="row my-4">
                    <div class="col-sm">
                        <label for="password" class="text-light">Senha*</label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="Informe a senha" required>
                    </div>
                </div>
                <div class="g-recaptcha" data-sitekey="your_site_key">
                    <button type="submit" class="btn btn-secondary">Cadastrar</button>
                </div>
                
            </form>
        </div>
    </div>     
</div>

<script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit"
    async defer>
</script>
<script type="text/javascript">
  var onloadCallback = function() {
    alert("grecaptcha is ready!");
  };
</script>
