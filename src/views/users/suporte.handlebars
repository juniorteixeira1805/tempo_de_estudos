<div class="card bg-dark col-sm-10"style="margin: 0 auto;">
    <div class="card-body">
        <form action="/authUser/enviarEmail" method="POST">
        <div class="form-group">
            <b><label for="exampleFormControlInput1">Endereço de E-mail</label></b>
            <input type="email" class="form-control" value="{{user.email}}" id="exampleFormControlInput1"  disabled>
        </div>
        <div class="form-group">
            <b><label for="exampleFormControlSelect1">Selecione o assunto</label></b>
            <select class="form-control" id="assunto" size="3" name="assunto">
            <option value="Bug">Problemas</option>
            <option value="Sugestão">Sugestão</option>
            <option value="Crítica">Crítica</option>
            <option value="Dúvida">Dúvida</option>^
            <option class="Outro">Outro</option>
            </select>
        </div>
        <div class="form-group">
            <b><label for="exampleFormControlTextarea1">Digite o texto do seu E-mail (Máximo: 300 caracteres)</label></b>
            <textarea maxlength="300" class="form-control" name="texto" id="texto" rows="3"></textarea>
        </div>
            <button type="submit" class="btn btn-light">Enviar</button>
        </form>
    </div>
</div>