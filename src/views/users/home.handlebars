            <tbody>
              {{#each usuarios}}
              <tr>
                <input type="hidden" name="id" value="{{_id}}">
                <td><span class="d-inline-block text-" tabindex="0" data-toggle="tooltip" title="{{{recado}}}"><img class="rounded-circle border border-secondary" style="width: 40px; height: 40px;" src="{{foto}}"></span></td>
