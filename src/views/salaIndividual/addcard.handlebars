<div class="container">
    <form action="/salaIndividual/addcard" method="POST">
        <input type="text" name="id" value="{{card._id}}" hidden>
            <div class="form-group">
                <label for="pergunta" class="text-dark">Pergunta*</label>
                <input class="form-control" name="pergunta" id="pergunta" rows="3" required></input>
            </div>
            <div class="form-group ">
                <label for="resposta" class="text-dark">Resposta*</label>
                <input class="form-control" name="resposta" id="resposta" rows="3" required></input>
            </div> 
        <div class="modal-footer">
            <button type="submit" onclick="desativarBotao(this)" class="btn btn-success mb-2">Adicionar </button>
        </div>
    </form>
</div>
<script>
    function desativarBotao(x){
      setTimeout(function(){ x.setAttribute("disabled" , "disabled") }, 100);
    }
</script>